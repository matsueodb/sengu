<%= error_messages_for(@regular_expression) %>
<fieldset>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
      
    </div>
  </div>

  <div class="form-group">
    <%= f.label :format, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-11">
          <p class="text-info"><%= t(".format_description") %></p>
        </div>
      </div>
      <div class="row">

        <div class="form-inline">
          <div class="form-group">
            <p class="form-control-static">/</p>
          </div>
          <div class="form-group col-sm-5">
            <%= f.text_field :format, class: "form-control" %>
          </div>
          <div class="form-group">
            <p class="form-control-static">/</p>
          </div>
          <div class="form-group col-sm-2">
            <%= f.text_field :option, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</fieldset>
<style>
  .form-inline .form-group{
    margin-left: 0;
    margin-right: 0;
  }
  .form-inline > .form-group{
    float: left
  }
</style>
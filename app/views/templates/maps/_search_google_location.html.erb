<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&times;</a>
      <h3><%= t(".title") %></h3>
      <%= t(".description") %>
    </div>
    <div class="modal-body">
      <% if @map %>
        <%= render partial: "gm_script" %>
        <div id="map_canvas" style="width: 950px;height: 400px"></div>
        <div style="clear: both"></div>
      <% else %>
        <%= t(".no_search_data") %>
      <% end %>
    </div>
    <div class="modal-footer">
      <div class="form-group">
        <%= label_tag :latitude, t(".latitude") + "：", class: "col-sm-1 control-label" %>
        <div class="col-sm-3">
          <%= text_field_tag :latitude, @map.try(:latitude), id: "search_gm_latitude", class: "form-control" %>
        </div>
        <%= label_tag :latitude, t(".longitude") + "：", class: "col-sm-1 control-label" %>
        <div class="col-sm-3">
          <%= text_field_tag :longitude, @map.try(:longitude), id: "search_gm_longitude", class: "form-control" %>
        </div>
        <div class="col-sm-4">
          <% if @map %>
            <%= link_to(t(".insert_after_close"), '#', "data-dismiss" => "modal", onclick: "setGMGeo();return false;", class: "btn btn-primary") %>
          <% end %>
          <a class="btn btn-primary" data-dismiss="modal"><%= t("shared.close") %></a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // 緯度、経度の初期セット
  function setGMGeo(){
    $("#<%= @map.latitude_id %>").val($("#search_gm_latitude").val())
    $("#<%= @map.longitude_id %>").val($("#search_gm_longitude").val())
  }
  // マーカーコンテントの初期セット
</script>

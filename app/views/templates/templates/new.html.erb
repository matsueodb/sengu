<% content_for(:wizard) do %>
  <%= render "/templates/shared/step_wizard", current_action: :template_new %>
<% end %>

<%= alert_tag(type: :info) do %>
  <%= simple_format t(".description") %>
<% end %>

<%= form_for(@template, url: templates_path(@template), html: {class: "form-horizontal well"}) do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-8">
        <%= render partial: "form", locals: {f: f} %>
      </div>
    </div>
  </div>
  <%= button_tag_with_icon t("shared.new"), class: "btn btn-primary", icon: "plus-sign" %>
  <%= link_to_back(services_path) %>

<% end %>

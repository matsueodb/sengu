<%= form_for(service, html: {class: 'well form-horizontal', role: 'form'}) do |f| %>
  <%= error_messages_for(service) %>

  <div class="form-group">
    <%= f.label :name, class: 'col-lg-2 control-label' %>
    <div class="col-lg-5">
      <%= f.text_field :name, autofocus: true, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description,  class: 'col-lg-2 control-label' %>
    <div class="col-lg-5">
      <%= f.text_area :description, class: 'form-control'%>
    </div>
  </div>

  <%= button_tag_with_icon t('shared.save'), class: 'btn btn-primary', icon: 'plus-sign' %>
  <%= link_to_with_icon t('.back'), services_path(id: service), class: 'btn btn-warning', icon: 'circle-arrow-left' %>
<% end %>
